<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>OrderManagementApp</display-name>  
<servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
   <!-- Using .xhtml URL pattern. Can change to JSF later. -->
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>Faces Servlet</servlet-name>
  <url-pattern>*.xhtml</url-pattern>    
 </servlet-mapping>  
 <!-- Using the slate BootFaces Theme -->
<context-param>
    <param-name>BootsFaces_THEME</param-name>
    <param-value>slate</param-value>
</context-param>
<!-- Filter to prevent access without logging in.  -->
<filter>  
	<filter-name>sec</filter-name>  
	<filter-class>model.myFilter</filter-class>  
</filter>     
<filter-mapping>  
	<filter-name>sec</filter-name>  
	<url-pattern>/app/*</url-pattern>  
</filter-mapping> 
</web-app>